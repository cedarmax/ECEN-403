<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Battery Percentage Chart -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battery Percentage (%)"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:layout_gravity="center" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/batteryPercentageChart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center" />

    <!-- Solar Panel Wattage Chart -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solar Panel Wattage (W)"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:paddingTop="16dp" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/solarCurrentChart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center" />

    <!-- Battery Wattage Chart -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battery Wattage (W)"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:paddingTop="16dp" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/batteryWattageChart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center" />

    <!-- X-axis Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time (s)"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:paddingTop="8dp" />
</LinearLayout>
